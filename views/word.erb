<h3>Word: <%= @word.word_name %></h3>

<% if @word.definitions.any? %>
  <ul>
    <% @word.definitions.each do |definition| %>
      <li><a href="/words/<%= @word.id %>/definition/<%= @word.definitions.index(definition) %>"><%= definition.definition %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no definitions to display.</p>
<% end %>

<a href="/words/<%= @word.id %>/add_definition">Add a new definition</a>

<p><a href="/words/<%= @word.id %>/edit">Edit word</a></p>
