<h3>Edit word: <%= @word.word_name %></h3>

<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="edited">Enter your edited word:</label>
  <input name="edited" class="form-control" type="text">

  <button type="submit">Update</button>
</form>

<form action="/words/<%= @word.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete word</button>
</form>
